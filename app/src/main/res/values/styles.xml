<resources>

    <!-- Base application theme. -->

    <style name="TextAppearance.Text.Regular" parent="android:TextAppearance">
    </style>

    <style name="TextAppearance.Text.Bold" parent="android:TextAppearance">
    </style>

    <style name="TextAppearance.Text.Light" parent="android:TextAppearance">
    </style>


    <style name="TextStyle">
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextStyle.Title" parent="TextStyle">
        <item name="android:textAppearance">@style/TextAppearance.Text.Regular</item>
    </style>

    <style name="TextStyle.Title.Sub" parent="TextStyle.Title">
        <item name="android:textAppearance">@style/TextAppearance.Text.Light</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextStyle.Heading" parent="TextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textAppearance">@style/TextAppearance.Text.Bold</item>
    </style>

    <style name="TextAppearence.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="my_dialog_theme" parent="Theme.AppCompat.Light.Dialog">
    <item name="colorAccent">@color/v2_app_color</item>                   <!--header background-->
    <item name="android:windowBackground">@color/black</item>     <!--calendar background-->
    <item name="android:colorControlActivated">@color/v2_app_color</item> <!--selected day-->
    <item name="android:textColorPrimary">@color/v2_app_color</item> <!--days of the month-->
    <item name="android:textColorSecondary">@color/v2_app_color</item>    <!--days of the week-->
    <item name="android:textColor">@color/v2_app_color</item>
    </style>
   <!-- old calendrer color
    <style name="my_dialog_theme" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="colorAccent">@color/colorAccent</item>                   &lt;!&ndash;header background&ndash;&gt;
        <item name="android:windowBackground">@color/colorPrimary</item>     &lt;!&ndash;calendar background&ndash;&gt;
        <item name="android:colorControlActivated">@color/colorAccent</item> &lt;!&ndash;selected day&ndash;&gt;
        <item name="android:textColorPrimary">@color/black</item> &lt;!&ndash;days of the month&ndash;&gt;
        <item name="android:textColorSecondary">@color/colorAccent</item>    &lt;!&ndash;days of the week&ndash;&gt;
    </style>-->

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="progress_example">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">2.5</item>
        <item name="android:layout_height">10sp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>


    <!--Version 2 starts-->


    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/color_grey</item>
        <item name="colorControlActivated">@color/color_rating_activate</item>
    </style>

    <style name="spinner_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/genderspinnerstyle</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:popupBackground">#DFFFFFFF</item>
    </style>

    <!--Version 2 ends-->

    <style name="RoundedCornersDialog_Mid" parent="@style/Theme.MaterialComponents.Dialog">
        <item name="dialogCornerRadius">15dp</item>
    </style>

    <style name="PinWidget.PinView" parent="Widget.AppCompat.EditText">
        <item name="android:background">@null</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textCursorDrawable">@drawable/pv_invisible_image</item>
        <item name="android:textSelectHandle">@drawable/pv_invisible_image</item>
        <item name="android:textSelectHandleLeft">@drawable/pv_invisible_image</item>
        <item name="android:textSelectHandleRight">@drawable/pv_invisible_image</item>
    </style>

</resources>
